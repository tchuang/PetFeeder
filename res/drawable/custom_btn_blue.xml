<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5bb0da" />
            <gradient android:angle="-90" android:endColor="#4e97bc" android:startColor="#56a6cf" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5bb0da" />
            <solid android:color="#3d7692" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5bb0da" />
            <gradient android:angle="-90" android:endColor="#529ec4" android:startColor="#68c8f9" />
        </shape>
    </item>
</selector>